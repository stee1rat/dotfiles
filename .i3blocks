# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume master"
order += "wireless wlp3s0"
order += "ethernet _first_"
order += "ethernet ppp0"
order += "battery 0"
order += "disk /"
order += "load"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W: %ip (%essid)"
        #format_down = "W: down"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = ""
        #format_down = "E: down"
}

ethernet ppp0 {
        format_up = "P: %ip"
#        format_down = "P: down"
        format_down = ""
}

battery 0 {
        format = "%status %percentage" 
        path = /sys/class/power_supply/BAT0/uevent
        low_threshold = 10
}

cpu_usage {
	format = "CPU: %usage"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%d.%m.%Y %H:%M:%S"
        #format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

cpu_temperature 0 {
        format = "T: %degrees°C"
	max_threshold = 65
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

volume master {
	format = "V: %volume"
	format_muted = "V: %volume (muted)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

